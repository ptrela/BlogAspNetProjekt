@model BlogAspNet.Models.Entities.BlogPost

<div>
    <h1>@Model.Title</h1>
    
    <p><strong>Kategoria: @ViewBag.CategoryName</strong></p>
    
    <p>@Model.Content</p>
    
    <p>Ilość wyświetleń: @Model.Views</p>
    
    <a href="/BlogPosts/Edit/@Model.Id" class="btn btn-info">Edytuj</a>
</div>